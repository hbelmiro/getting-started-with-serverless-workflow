{
  "id": "jsongreet",
  "version": "1.0",
  "specVersion": "0.8",
  "name": "Greeting workflow",
  "description": "JSON based greeting workflow",
  "start": "ChooseOnLanguage",
  "functions": [
    {
      "name": "greetFunction",
      "type": "custom",
      "operation": "sysout"
    }
  ],
  "states": [
    {
      "name": "ChooseOnLanguage",
      "type": "switch",
      "dataConditions": [
        {
          "condition": "${ .language == \"Portuguese\" }",
          "transition": "GreetInPortuguese"
        },
        {
          "condition": "${ .language == \"Spanish\" }",
          "transition": "GreetInSpanish"
        }
      ],
      "defaultCondition": {
        "transition": "GreetInEnglish"
      }
    },
    {
      "name": "GreetInEnglish",
      "type": "inject",
      "data": {
        "greeting": "Hello from Serverless Workflow, ${ .name }"
      },
      "transition": "GreetPerson"
    },
    {
      "name": "GreetInPortuguese",
      "type": "inject",
      "data": {
        "greeting": "Ol√° do Serverless Workflow, ${ .name }"
      },
      "transition": "GreetPerson"
    },
    {
      "name": "GreetInSpanish",
      "type": "inject",
      "data": {
        "greeting": "Saludos desde Serverless Workflow, ${ .name }"
      },
      "transition": "GreetPerson"
    },
    {
      "name": "GreetPerson",
      "type": "operation",
      "actions": [
        {
          "name": "greetAction",
          "functionRef": {
            "refName": "greetFunction",
            "arguments": {
              "message": ".greeting+.name"
            }
          }
        }
      ],
      "end": {
        "terminate": true
      }
    }
  ]
}