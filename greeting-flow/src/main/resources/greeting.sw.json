{
  "id": "greeting",
  "version": "1.0",
  "specVersion": "0.8",
  "name": "Greeting workflow",
  "description": "JSON based greeting workflow",
  "start": "ChooseOnCountry",
  "functions": [
    {
      "name": "translateGreetingFunction",
      "operation": "translation-service.yml#translate"
    }
  ],
  "states": [
    {
      "name": "ChooseOnCountry",
      "type": "switch",
      "dataConditions": [
        {
          "condition": "${ .country == \"United States\" }",
          "transition": "GreetInEnglish"
        },
        {
          "condition": "${ .country == \"Spain\" }",
          "transition": "GreetInSpanish"
        },
        {
          "condition": "${ .country == \"Brazil\" }",
          "transition": "GreetInPortuguese"
        }
      ],
      "defaultCondition": {
        "transition": "GreetInEnglish"
      }
    },
    {
      "name": "GreetInEnglish",
      "type": "inject",
      "data": {
        "language": "English"
      },
      "transition": "TranslateGreeting"
    },
    {
      "name": "GreetInSpanish",
      "type": "inject",
      "data": {
        "language": "Spanish"
      },
      "transition": "TranslateGreeting"
    },
    {
      "name": "GreetInPortuguese",
      "type": "inject",
      "data": {
        "language": "Portuguese"
      },
      "transition": "TranslateGreeting"
    },
    {
      "name": "TranslateGreeting",
      "type": "operation",
      "actions": [
        {
          "name": "translateGreeting",
          "functionRef": {
            "refName": "translateGreetingFunction",
            "arguments": {
                  "name": "${ .name }",
                  "language": "${ .language }"
              }
          }
        }
      ],
      "stateDataFilter": {
        "output": "${ {greeting: .greeting} }"
      },
      "end": true
    }
  ]
}