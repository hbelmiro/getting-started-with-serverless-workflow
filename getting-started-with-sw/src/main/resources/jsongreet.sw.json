{
  "id": "jsongreet",
  "version": "1.0",
  "specVersion": "0.8",
  "name": "Greeting workflow",
  "description": "JSON based greeting workflow",
  "start": "ChooseOnCountry",
  "functions": [
    {
      "name": "greetFunction",
      "type": "custom",
      "operation": "sysout"
    },
    {
      "name": "translateGreetingFunction",
      "operation": "service.yml#translateGreeting"
    }
  ],
  "states": [
    {
      "name": "ChooseOnCountry",
      "type": "switch",
      "dataConditions": [
        {
          "condition": "${ .country == \"US\" }",
          "transition": "GreetInEnglish"
        }
      ],
      "defaultCondition": {
        "transition": "ChooseOnLanguage"
      }
    },
    {
      "name": "GreetInEnglish",
      "type": "inject",
      "data": {
        "greeting": "Hello from Serverless Workflow, "
      },
      "transition": "GreetPerson"
    },
    {
      "name": "ChooseOnLanguage",
      "type": "switch",
      "dataConditions": [
        {
          "condition": "${ .country == \"ES\" }",
          "transition": "GreetInSpanish"
        },
        {
          "condition": "${ .country == \"BR\" }",
          "transition": "GreetInPortuguese"
        }
      ],
      "defaultCondition": {
        "transition": "GreetInEnglish"
      }
    },
    {
      "name": "GreetInSpanish",
      "type": "inject",
      "data": {
        "language": "Spanish"
      },
      "transition": "TranslateGreeting"
    },
    {
      "name": "GreetInPortuguese",
      "type": "inject",
      "data": {
        "language": "Portuguese"
      },
      "transition": "TranslateGreeting"
    },
    {
      "name": "TranslateGreeting",
      "type": "operation",
      "actionMode": "sequential",
      "actions": [
        {
          "name": "translateGreeting",
          "functionRef": {
            "refName": "translateGreetingFunction",
            "arguments": {
              "name": "${ .name }",
              "language": "${ .language }"
            }
          }
        }
      ],
      "transition": "GreetPerson"
    },
    {
      "name": "GreetPerson",
      "type": "operation",
      "actions": [
        {
          "name": "greetAction",
          "functionRef": {
            "refName": "greetFunction",
            "arguments": {
              "message": "${ .workflowdata.greeting }"
            }
          }
        }
      ],
      "end": true
    }
  ]
}